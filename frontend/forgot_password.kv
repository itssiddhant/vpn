<ForgotPasswordScreen>:
    on_leave: app.reset_forgot_password_fields()  # Reset fields when leaving the screen
    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'assets/world.jpg'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: min(root.width - dp(40), dp(340)), self.minimum_height
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: dp(20)
            padding: dp(20)
            
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]
                Color:
                    rgba: 0, 0.5, 0, 1  # Green color for border
                Line:
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 15)
                    width: 2  # Border width
            
            MDLabel:
                text: 'Forgot Password'
                font_style: 'H4'
                halign: 'center'
                theme_text_color: "Custom"
                text_color: 0, 0.5, 0, 1  # Green color
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: dp(15)
            
            MDTextField:
                id: email
                hint_text: 'Email'
                icon_right: 'email'
                size_hint_x: 1
                font_size: dp(18)
                mode: "rectangle"
                line_color_normal: 0, 0.5, 0, 1  # Green color

            MDTextField:
                id: new_password
                hint_text: 'New Password'
                size_hint_x: 1
                font_size: dp(18)
                password: True
                mode: "rectangle"
                icon_right: 'eye-off'
                line_color_normal: 0, 0.5, 0, 1  # Green color
                
            MDTextField:
                id: confirm_password
                hint_text: 'Confirm Password'
                size_hint_x: 1
                font_size: dp(18)
                password: True
                mode: "rectangle"
                icon_right: 'eye-off'
                line_color_normal: 0, 0.5, 0, 1  # Green color

            MDRaisedButton:
                text: 'Send OTP'
                size_hint_x: 1
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                md_bg_color: 0, 0.5, 0, 1  # Green color
                on_release: 
                    app.initiate_password_reset(email.text, new_password.text, confirm_password.text)
            
            MDTextField:
                id: otp
                hint_text: 'OTP'
                icon_right: 'numeric'
                size_hint_x: 1
                font_size: dp(18)
                mode: "rectangle"
                line_color_normal: 0, 0.5, 0, 1  # Green color
                disabled: True
                
            MDRaisedButton:
                id: apply_button
                text: 'Apply'
                size_hint_x: 1
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                md_bg_color: 0, 0.5, 0, 1  # Green color
                on_release: 
                    app.apply_new_password(email.text, otp.text)
                disabled: True
            
            MDFlatButton:
                text: 'Back'
                pos_hint: {'center_x': 0.5}
                theme_text_color: "Custom"
                text_color: 0, 0.5, 0, 1  # Green color
                on_release: app.change_screen('login')